<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/back_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bdar_scanview_gradient_color_1"
        android:visibility="visible"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/collection_success_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/collection1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/back_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <ImageView
        android:layout_width="315dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/background_pink"
        app:layout_constraintBottom_toTopOf="@+id/collection_success_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/introduction_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="我是一只猫"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/collection_success_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/collect_success_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="45"
        android:text="收藏成功！"
        android:textColor="#a0cc0000"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="@+id/collection_success_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/collection_success_image"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/add_money_text"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:text="+   100"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/collection_success_image" />

    <ImageView
        android:id="@+id/money_Image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/money"
        app:layout_constraintStart_toEndOf="@+id/add_money_text"
        app:layout_constraintTop_toBottomOf="@+id/collection_success_image" />

    <TextView
        android:id="@+id/back_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击任意位置返回"
        android:textColor="#40000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_money_text" />

</android.support.constraint.ConstraintLayout>