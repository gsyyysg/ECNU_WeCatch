<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Task.SpecificTask">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/sepecific_task_image"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/sepecific_task_name"
        android:layout_below="@id/sepecific_task_image"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:text="TASK_NAME"
        android:textSize="22sp"
        android:textColor="#000000"
        android:gravity="left"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/sepecific_task_get"
        android:layout_below="@id/sepecific_task_image"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:text = "Get"
        android:textColor="#ffffff"
        android:background="#32CD32"
        android:textAllCaps="false"
        />

    <TextView
        android:id="@+id/sepecific_task_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sepecific_task_name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:text="123"
        android:textColor="#717171" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/sepecific_task_line"
        android:layout_below="@id/sepecific_task_background"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#a7a6a6"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sepecific_task_line"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
    </android.support.v7.widget.RecyclerView>



</RelativeLayout>